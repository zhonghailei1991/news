<view class="page__bd">
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="weui-cells__title">姓名</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input name="name" focus="true" class="weui-input" placeholder="请输入姓名" />
                </view>
            </view>
        </view>

        <view class="weui-cells__title">手机号码</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input name="phone" class="weui-input" placeholder="请输入手机号码" />
                </view>
            </view>
        </view>

        <view class="weui-cells__title">内容</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea name="msg" class="weui-textarea" placeholder="请输入内容" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" formType="submit" bindtap="">确定</button>
        </view>
    </form>
</view>